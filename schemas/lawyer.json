{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Lawyer",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "The lawyers's unique identifier in the lawdbl database."
    },
    "informalName": {
      "type": "string",
      "description": "The lawyers's full name."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "The lawyers's email address."
    },
    "isBarrister": {
      "type": "boolean",
      "default": false
    },
    "isSolo": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["id", "informalName", "email"]
}
